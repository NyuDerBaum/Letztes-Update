<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.modules.ModulesFragment">

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/profEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Dozent"
        android:inputType="text" />

    <EditText
        android:id="@+id/colorEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Farbe (int) - ist nur Platzhalter"
        android:inputType="number" />

    <Button
        android:id="@+id/addModuleButton"
        android:text="Add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:autofillHints="Add Module" />

    <ListView
        android:id="@+id/modulesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp" />
</LinearLayout>